            <a href="#" class="list-group-item list-group-item-action ps-4 bg-black text-white" onclick="changeContent('dummy8')">Act 2</a>
            <a href="#" class="list-group-item list-group-item-action ps-4 bg-black text-white" onclick="changeContent('dummy9')">Act 3</a>
        </div>
    </div>
</div>

<!-- Offcanvas Sidebar (Mobile) -->
<div class="offcanvas offcanvas-start bg-dark text-white" id="mobileSidebar">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <div class="accordion" id="mobileAccordion">
            <div class="accordion-item bg-dark">
                <h2 class="accordion-header">
                    <button class="accordion-button bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#mobileChapter1">
                        Chapter 1
                    </button>
                </h2>
                <div id="mobileChapter1" class="accordion-collapse collapse" data-bs-parent="#mobileAccordion">
                    <div class="accordion-body">
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy1')" data-bs-dismiss="offcanvas">Act 1</a>
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy2')" data-bs-dismiss="offcanvas">Act 2</a>
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy3')" data-bs-dismiss="offcanvas">Act 3</a>
                    </div>
                </div>
            </div>

            <div class="accordion-item bg-dark">
                <h2 class="accordion-header">
                    <button class="accordion-button bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#mobileChapter2">
                        Chapter 2
                    </button>
                </h2>
                <div id="mobileChapter2" class="accordion-collapse collapse" data-bs-parent="#mobileAccordion">
                    <div class="accordion-body">
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy4')" data-bs-dismiss="offcanvas">Act 1</a>
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy5')" data-bs-dismiss="offcanvas">Act 2</a>
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy6')" data-bs-dismiss="offcanvas">Act 3</a>
                    </div>
                </div>
            </div>

            <div class="accordion-item bg-dark">
                <h2 class="accordion-header">
                    <button class="accordion-button bg-dark text-white" type="button" data-bs-toggle="collapse" data-bs-target="#mobileChapter3">
                        Chapter 3
                    </button>
                </h2>
                <div id="mobileChapter3" class="accordion-collapse collapse" data-bs-parent="#mobileAccordion">
                    <div class="accordion-body">
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy7')" data-bs-dismiss="offcanvas">Act 1</a>
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy8')" data-bs-dismiss="offcanvas">Act 2</a>
                        <a href="#" class="d-block text-white p-2" onclick="changeContent('dummy9')" data-bs-dismiss="offcanvas">Act 3</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Main Content -->
<div class="content">
    <h2 id="main-title">Welcome</h2>
    <iframe id="pdf-viewer" src="" width="100%" height="600px" style="border: none;"></iframe>
</div>

<script>
    // Function to change content based on selection
    function changeContent(pdfName) {
        const pdfViewer = document.getElementById("pdf-viewer");
        pdfViewer.src = `/pdfs/${pdfName}.pdf`; // Load PDF dynamically
    }
</script>
