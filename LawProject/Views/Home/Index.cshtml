    <script>
        // Store current navigation state
        let currentChapter = "";
        let currentSection = "";

        // Chapter selection
        $(".chapter").on("click", function() {
            const chapterNum = $(this).data("chapter");
            showChapterContent(chapterNum);
        });

        // Chapter selection from top menu
        $(document).on("click", ".scrollmenu a", function(e) {
            e.preventDefault();
            const chapterNum = $(this).data("chapter");
            showChapterContent(chapterNum);
        });

        // Section item click
        $(document).on("click", ".section-item", function() {
            const sectionNum = $(this).data("section");
            showSectionContent(currentChapter, sectionNum);
        });

        // Section tab click from scrollSection
        $(document).on("click", ".scrollSection a", function() {
            const sectionNum = $(this).data("section");
            showSectionContent(currentChapter, sectionNum);
        });

        // Back button to chapters
        $("#backButton").on("click", function() {
            $("#chapterDescriptionDiv").hide();
            $("#chapterListDiv").show();
            $(".title").html("Indian Penal Code - 1860");

            // Reset current selections
            currentChapter = "";
            currentSection = "";
        });

        // Back button to sections
        $("#backToSections").on("click", function() {
            $("#sectionContentDiv").hide();
            $("#chapterDescriptionDiv").show();

            // Update title to show chapter
            updateTitleForChapter(currentChapter);

            // Reset current section
            currentSection = "";
        });

        // Function to show chapter content
        function showChapterContent(chapterNum) {
            // Store current chapter
            currentChapter = chapterNum;

            // Hide chapter list and section content, show chapter description
            $("#chapterListDiv").hide();
            $("#sectionContentDiv").hide();
            $("#chapterDescriptionDiv").show();

            // Hide all chapter sections and show the selected one
            $(".chapter-section").addClass("d-none");
            $(`#chapter${chapterNum}`).removeClass("d-none");

            // Update active chapter in scroll menu (both in chapter view and section view)
            $(".scrollmenu a").removeClass("activeChapter");
            $(`.scrollmenu a[data-chapter="${chapterNum}"]`).addClass("activeChapter");

            // Update title
            updateTitleForChapter(chapterNum);

            // Scroll active chapter into view
            const activeLink = $(`.scrollmenu a[data-chapter="${chapterNum}"]`)[0];
            if (activeLink) {
                activeLink.scrollIntoView({
                    behavior: 'smooth',
                    inline: 'center'
                });
            }
        }

        // Function to show section content
        function showSectionContent(chapterNum, sectionNum) {
            // Store current section
            currentSection = sectionNum;

            // Hide chapter description and show section content
            $("#chapterDescriptionDiv").hide();
            $("#sectionContentDiv").show();

            // Update chapter tabs
            $(".scrollmenu a").removeClass("activeChapter");
            $(`.scrollmenu a[data-chapter="${chapterNum}"]`).addClass("activeChapter");

            // Update section tabs
            populateSectionTabs(chapterNum);

            // Update active section in tabs
            $(".scrollSection a").removeClass("activeSection");
            $(`.scrollSection a[data-section="${sectionNum}"]`).addClass("activeSection");

            // Load section content
            loadSectionContent(chapterNum, sectionNum);

            // Update title for section
            updateTitleForSection(chapterNum, sectionNum);

            // Scroll active section into view
            setTimeout(function() {
                const activeSectionLink = $(`.scrollSection a[data-section="${sectionNum}"]`)[0];
                if (activeSectionLink) {
                    activeSectionLink.scrollIntoView({
                        behavior: 'smooth',
                        inline: 'center'
                    });
                }
            }, 100);
        }

        // Function to populate section tabs
        function populateSectionTabs(chapterNum) {
            const $sectionTabs = $(".scrollSection");
            $sectionTabs.empty();

            // Get all sections from the chapter
            const $sections = $(`#chapter${chapterNum} .section-item`);

            $sections.each(function() {
                const sectionNum = $(this).data("section");
                const sectionText = $(this).text().split(".")[0]; // Get "Section X" part

                const $tab = $("<a></a>")
                    .attr("data-section", sectionNum)
                    .text(sectionText);

                if (sectionNum == currentSection) {
                    $tab.addClass("activeSection");
                }

                $sectionTabs.append($tab);
            });
        }

        // Function to load section content
        function loadSectionContent(chapterNum, sectionNum) {
            // In a real application, you would fetch the actual content
            // For this example, we'll generate placeholder content
            const $sectionContent = $(".section-content");

            // Find the section title
            const sectionTitle = $(`#chapter${chapterNum} .section-item[data-section="${sectionNum}"]`).text();

            // Generate content (replace with actual content in real application)
            const content = `
                <h3>${sectionTitle}</h3>
                <div>
                    <p>This is the content for ${sectionTitle} in Chapter ${chapterNum} of the Indian Penal Code.</p>
                    <p>In a real application, this would contain the full text of the section.</p>
                </div>
            `;

            $sectionContent.html(content);
        }

        // Update title for chapter
        function updateTitleForChapter(chapterNum) {
            const chapterTitle = $(`.chapter[data-chapter="${chapterNum}"]`).text();
            $(".title").text(chapterTitle);
        }

        // Update title for section
        function updateTitleForSection(chapterNum, sectionNum) {
            const sectionTitle = $(`#chapter${chapterNum} .section-item[data-section="${sectionNum}"]`).text();
            $(".title").text(sectionTitle);
        }
    </script>
