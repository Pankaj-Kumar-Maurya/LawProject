@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Indian Penal Code - 1860</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            /*  background: url('https://www.transparenttextures.com/patterns/aged-paper.png'); */
        }

        .header {
            background-color: #5A3412;
            color: #fff;
            padding: 15px;
            text-align: center;
            position: relative;
        }

            .header .title {
                font-size: 20px;
            }

        .tabs {
            display: flex;
            justify-content: center;
            background-color: #7A4921;
        }

            .tabs div {
                padding: 10px 20px;
                color: #fff;
                cursor: pointer;
            }

            .tabs .active {
                border-bottom: 3px solid #FF5C5C;
            }

        .activeChapter {
            border-bottom: 3px solid red;
        }

        .chapter-list {
            padding: 15px;
            font-size: 12px;
        }

        .chapter {
            background-color: #FFF8DC;
            padding: 10px;
            margin-bottom: 5px;
            border: 1px solid #8B5A2B;
        }

        div.scrollmenu {
            background-color: #333;
            overflow: auto;
            white-space: nowrap;
        }

            div.scrollmenu a {
                display: inline-block;
                color: white;
                text-align: center;
                padding: 14px;
                text-decoration: none;
                font-size: 10px;
            }

    </style>
</head>
<body>
    <div class="header">
        <div class="title">Indian Penal Code - 1860</div>
    </div>
    <div id="chapterListDiv">

        <div class="tabs">
            <div class="active">INDIAN PENAL CODE - 1860</div>
        </div>

        <div class="chapter-list">
            <div class="chapter" onclick="showChapter(this)">Chapter I - Introduction (1–5)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter II - General Explanations (6–52A)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter III - Punishments (53–75)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter IV - General Exceptions (76–106)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter V - Abetment (107–120)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter VA - Criminal Conspiracy (120A–120B)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter VI - Offences against the State (121–130)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter VII - Offences relating to the Army, Navy and Air Force (131–140)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter VIII - Offences against the Public Tranquillity (141–160)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter IX - Offences by or related to Public Servants (161–171)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter IXA - Offences relating to Elections (171A–171I)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter X - Contempts of Lawful Authority of Public Servants (172–190)</div>
            <div class="chapter" onclick="showChapter(this)">Chapter XI - False Evidence and Offences against Public Justice</div>
        </div>
    </div>

    <div id="chapterDescriptionDiv" style="display: none;">
        <div class="scrollmenu">
            <a href="#chapterI" class="activeChapter">Chapter I</a>
            <a href="#chapterII">Chapter II</a>
            <a href="#chapterIII">Chapter III</a>
            <a href="#chapterIV">Chapter IV</a>
            <a href="#chapterV">Chapter V</a>
            <a href="#chapterVA">Chapter VA</a>
            <a href="#chapterVI">Chapter VI</a>
            <a href="#chapterVII">Chapter VII</a>
            <a href="#chapterVIII">Chapter VIII</a>
            <a href="#chapterIX">Chapter IX</a>
            <a href="#chapterIXA">Chapter IXA</a>
            <a href="#chapterX">Chapter X</a>
            <a href="#chapterXI">Chapter XI</a>
            <a href="#chapterXII">Chapter XII</a>
            <a href="#chapterXIII">Chapter XIII</a>
            <a href="#chapterXV">Chapter XV</a>
            <a href="#chapterXVI">Chapter XVI</a>
            <a href="#chapterXVII">Chapter XVII</a>
            <a href="#chapterXVIII">Chapter XVIII</a>
            <a href="#chapterXIX">Chapter XIX</a>
            <a href="#chapterXX">Chapter XX</a>
            <a href="#chapterXXI">Chapter XXI</a>
            <a href="#chapterXXII">Chapter XXII</a>
            <a href="#chapterXXIII">Chapter XXIII</a>
        </div>

        <button id="backButton">🔙 Back to Chapters</button>
        <div id="chapterContent">
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function showChapter(element) {
            const chapterName = $(element).text().trim(); // Get text from clicked element
            $("#chapterListDiv").hide();
            $("#chapterDescriptionDiv").show();

            $("#chapterContent").html(`<h2>${chapterName}</h2>`);

            //top title
            $(".title").html(`${chapterName}`);
            // Mark the corresponding chapter link as active
            $(".scrollmenu a").removeClass("activeChapter");

            // Match the chapter number from the text (e.g., Chapter I, Chapter II)
            const chapterNumber = chapterName.match(/Chapter (\w+)/)?.[1];
                if (chapterNumber) {
            const activeLink = $(`.scrollmenu a[href='#chapter${chapterNumber.toUpperCase()}']`);
            activeLink.addClass("activeChapter");

            // Auto-scroll to bring the active link into view
            activeLink[0].scrollIntoView({
                behavior: 'smooth',
                inline: 'center' // Aligns the active chapter in the center
            });
        }
        }

        $('#backButton').on('click', function () {
            $('#chapterDescriptionDiv').hide();
            $('#chapterListDiv').show();
            $(".title").html(`Indian Penal Code - 1860`);
        });


        $(".scrollmenu a").on('click', function (e) {
            e.preventDefault();

            // Extract the chapter name from the link
            const chapterText = $(this).text().trim();

            // Find the corresponding chapter in the list
            const correspondingChapter = $(`.chapter:contains("${chapterText }")`);

            if (correspondingChapter.length) {
                showChapter(correspondingChapter); // Open the clicked chapter directly
            }
        });
    </script>



</body>
</html>
